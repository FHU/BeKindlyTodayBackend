generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int          @id @unique @default(autoincrement())
  kindeId        String       @unique @map("kinde_id")
  username       String?
  bio            String?
  profilePicture String?      @map("profile_picture")
  completions    Completion[]

  @@index([kindeId])
  @@map("users")
}

model Challenge {
  id            Int          @id @unique @default(autoincrement())
  prompt        String
  spanishPrompt String?      @map("spanish_prompt")
  suggestion    String
  twist         String       @unique
  spanishTwist  String?      @map("spanish_twist")
  date          DateTime     @unique @db.Date
  source        String
  rating        Int
  image         String
  completions   Completion[]

  @@index([date])
  @@map("challenges")
}

model Completion {
  id             Int       @id @unique @default(autoincrement())
  description    String
  date           DateTime  @default(now())
  userId         Int       @map("user_id")
  challengeId    Int       @map("challenge_id")
  completedTwist Boolean   @default(false) @map("completion_twist") // Provide a default value to allow migration without conflicts
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  challenge      Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([userId, challengeId])
  @@index([userId, challengeId], name: "user_id_challenge_id")
  @@index([date])
  @@map("completions")
}
