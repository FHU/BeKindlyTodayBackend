generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @unique @default(autoincrement())
  email       String       @unique
  username    String
  password    String
  bio         String?
  completions Completion[]

  @@map("users")
}

model Challenge {
  id             Int          @id @unique @default(autoincrement())
  prompt         String       @unique
  spanish_prompt String?
  suggestion     String
  twist          String
  spanish_twist  String?
  date           DateTime     @unique @db.Date
  source         String
  rating         Int
  image          String
  completions    Completion[]

  @@index([date])
  @@map("challenges")
}

model Completion {
  id              Int       @id @unique @default(autoincrement())
  description     String
  date            DateTime  @default(now())
  user_id         Int
  challenge_id    Int
  completed_twist Boolean   @default(false) // Provide a default value to allow migration without conflicts
  user            User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  challenge       Challenge @relation(fields: [challenge_id], references: [id], onDelete: Cascade)

  @@unique([user_id, challenge_id], name: "user_id_challenge_id")
  @@index([date])
  @@map("completions")
}
