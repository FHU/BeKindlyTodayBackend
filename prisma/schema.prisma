generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int          @id @unique @default(autoincrement())
  kindeId        String?      @unique @map("kinde_id")
  email          String       @unique
  username       String
  bio            String?
  profilePicture String?      @map("profile_picture")
  completions    Completion[]

  @@index([kindeId])
  @@map("users")
}

model Challenge {
  id            Int          @id @unique @default(autoincrement())
  prompt        String       @unique
  spanishPrompt String?      @map("spanish_prompt")
  suggestion    String
  twist         String
  spanishTwist  String?      @map("spanish_twist")
  date          DateTime     @unique @db.Date
  source        String
  rating        Int
  image         String
  completions   Completion[]

  @@index([date])
  @@map("challenges")
}

model Completion {
  id              Int       @id @unique @default(autoincrement())
  description     String
  date            DateTime  @default(now())
  user_id         Int
  challenge_id    Int
  completed_twist Boolean   @default(false) // Provide a default value to allow migration without conflicts
  user            User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  challenge       Challenge @relation(fields: [challenge_id], references: [id], onDelete: Cascade)

  @@unique([user_id, challenge_id], name: "user_id_challenge_id")
  @@index([date])
  @@map("completions")
}
